<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Styles/Adminstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #042331;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar "></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Shopping", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:#fff" })
                <h4>My Shop</h4>
            </div>

            <div class="pull-right">
                <div style="font-size:15px;font-weight:bold; margin-top:10px; margin-left:100px;"> <span>@Session["AdminName"]</span></div>
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Index", "Home")</li>
                    <li>@Html.ActionLink("Gallery", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="sidebar">

        <ul>
            <li><i class="fa-qrcode "> @Html.ActionLink("Dashboard", "Dashboard", "Categories")</i></li>
            <li><i class="fas fa-stream">@Html.ActionLink("Category", "Category", "AdminCategories")</i></li>
            <li><i class="fas fa-Link">@Html.ActionLink("Products", "Product", "Products")</i></li>
            <li><i class="fas fa-qrcode">@Html.ActionLink("Members", "Index", "Home")</i></li>
            <li><i class="fas fa-qrcode">@Html.ActionLink("Orders", "Index", "Home")</i></li>
        </ul>
    </div>
        
    <div style="margin-left:350px; margin-top:70px; width:auto;">
        <div class="container-fluid" style="margin-bottom:20px;">
            <div class="row">
                <div class="col-md-6">
                    <label>Search</label>
                    <input type="text" placeholder="Enter Keyword" name="searchKey" class="inputComn houseText form-control"/>
                </div>
                <div class="col-md-2">
                    <label>Action</label><br />
                    <input type="button" placeholder="Enter Keyword" name="searchKey" class="btn btn-primary " value="Search" />
                </div>
            </div>
        </div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
