@model OnlineShoppingStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<h2></h2>
<div class="container">
    <div class="panel-body col-md-7" style="background-color: #a9b3b4;">
        <h4>Product Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Product Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                Is Active
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                Is Delete
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDelete)
            </dd>

            <dt>
                Created Date
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>

            <dt>
                Modified Date
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ModifiedDate)
            </dd>

            <dt>
                Product Image
            </dt>

            <dd>
                <img src="~/ProductImg/@Model.ProductImg" style="width:100px;" />
            </dd>
            <dd>
                @Html.DisplayFor(model => model.ModifiedDate)
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                IsFeatured
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsFeatured)
            </dd>

            <dt>
                Quantity
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                Price
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                Category Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>

        </dl>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>